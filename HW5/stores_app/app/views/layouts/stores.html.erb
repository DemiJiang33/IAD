<html>
<head>
  <title> <%= @title %> </title>
  <%= stylesheet_link_tag "stores" %>
</head>
<body>
 
<!-- ------------------------------------------------------------------ -->
<div id="wholepage">
 
   <div id="header">SJU's Online Store</div>
  
   <div id="nav">
      <%= link_to_unless_current "Home",     {:action => "index"} %>    |
      <%= link_to_unless_current "About Us", {:action => "about"} %>    |
      <%= link_to_unless_current "Help",     {:action => "help" } %>     |
      <%= link_to_unless_current "Register", {:action => "register" }%> |
      <%= link_to_unless_current "Login",    {:action => "login" }%>    |    
      <%= link_to_unless_current "Logout",   {:action => "logout" }%>
   </div>
  
   <div id="content">
      <% if flash[:notice] %>
          <div id="notice"><%= flash[:notice] %></div>
      <% end %>
     
      <%= yield %>
     
     
   </div>
 
 
</div>
<!-- ------------------------------------------------------------------ -->
 
</body>
</html>